    <div id="chatbox">
      <div class="chatbox_container">
        <header class="top-bar">
          <div class="left">
            <span class="icon typicons-message"></span>
            <h2 class="raleway">Chat</h2>
          </div>

          <div class="right">
            <span class="icon typicons-minus"></span>
            <span class="icon typicons-times"></span>
          </div>
        </header>
        <div class="chatarea">
          <ol class="discussion">
            <div class="chat_container">
              <ul id="messages">
                <% messages.forEach (function(message) { %>
                  <li><%= message.sender + " > " + message.receiver + ": " + message.message %></li>
                <% }); %>
              </ul>
            </div>
          </ol>
        </div>
        <div class="inputbox">
          <form class="chat_input" action="">
            <input id="m" autocomplete="off" />
            <button type="submit">Send</button>
          </form>
        </div>
      </div>
    </div>




