

<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/chat.css" />
  </head>
  <body>
    <% include ../partials/nav %>

    <p><%= title %></p>
    <div id="userTwo">
      <%= user.username %>
    </div>
    <div class="chat_container">
      <div class="row">
        <div class=" three columns" data-current-uid="">
          <div class="me" data-uid="">
            <div class="profilebox">
              <img src="<%= user.photo_url %>">
            </div>
            <div class="smokemate-text">
              <div class="smokemate-text-left">
                <%= user.username %>
              </div>
              <div class="smokemate-text-right">
                <%= new Date().getFullYear() - new Date (user.birthday).getFullYear() %>
              </div>
            </div>
          </div>
        </div>
        <section class="module">
          <div class="chatbox_container">
            <header class="top-bar">
              <div class="left">
                <span class="icon typicons-message"></span>
                <h1>Chat</h1>
              </div>

              <div class="right">
                <span class="icon typicons-minus"></span>
                <span class="icon typicons-times"></span>
              </div>
            </header>
            <div class="chatarea">
              <ol class="discussion">
                <div class="chat_container">
                  <ul id="messages">
                    <% messages.forEach (function(message) { %>
                      <li><%= message.sender + " > " + message.receiver + ": " + message.message %></li>
                    <% }); %>
                  </ul>
                </div>
              </ol>
            </div>
            <div class="inputbox">
              <form class="chat_input" action="">
                <input id="m" autocomplete="off" />
                <button type="submit">Send</button>
              </form>
            </div>
          </div>
        </section>
        <div class="other-user three columns" data-current-uid="">
          <div class="potential-smokemate" data-uid="">
            <div class="smokemate-text">
              <div id="userOne" class="smokemate-text-left">
                <%= userOne.username %>
              </div>
              <div class="smokemate-text-right">
                <%= new Date().getFullYear() - new Date (userOne.birthday).getFullYear() %>
              </div>
            </div>
            <div class="profilebox">
              <img src=<%= userOne.photo_url %>>
            </div>
          </div>
        </div>
      </div>
    </div>




    <script src="http://code.jquery.com/jquery-1.11.3.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>

      var me='<%=  userOne.username %>';
      var otherUser = '<%= user.username %>';

    </script>

    <script src="../../javascripts/chat.js"></script>
  </body>
</html>

